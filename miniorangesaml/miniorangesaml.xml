<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="authentication" method="upgrade">
	<name>plg_authentication_miniorangesaml</name>
	<author>miniOrange Security Software Pvt. Ltd.</author>
	<authorEmail>info@miniorange.com</authorEmail>
	<authorUrl>www.miniorange.com</authorUrl>
	<creationDate>April 2015</creationDate>
	<copyright>Copyright 2015 miniOrange. All Rights Reserved.</copyright>
	<license>GNU/GPLv3</license>
	<version>1.0</version>
	<description>PLG_MINIORANGE_SAML_DESCRIPTION</description>
	<files>
		<filename plugin="miniorangesaml">miniorangesaml.php</filename>
		<filename>index.html</filename>
		<folder>saml2</folder>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_authentication_miniorangesaml.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="idp">
				<field name="miniorange_saml_idp_entityid" type="text"
					label="PLG_SAML_IDP_ENTITY_LABEL"
					description="PLG_SAML_IDP_ENTITY_DESC"
					size="40"
					default=""
				/>
				<field name="miniorange_saml_idp_sso" type="text"
					label="PLG_SAML_IDP_SSO_LABEL"
					description="PLG_SAML_IDP_SSO_DESC"
					size="40"
					default=""
				/>
				<field name="miniorange_saml_idp_x509cert" type="textarea"
					label="PLG_SAML_IDP_X509CERT_LABEL"
					description="PLG_SAML_IDP_X509CERT_DESC"
					rows="8" cols="55"
					default=""
				/>
			</fieldset>
		</fields>
	</config>

</extension>